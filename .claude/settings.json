{
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "FILE=$(jq -r '.tool_input.file_path') && npx prettier --write \"$FILE\""
                    }
                ]
            }
        ]
    },
    "permissions": {
        "allow": [
            "Bash(npm install:*)",
            "Bash(npx prettier:*)",
            "Bash(npx husky:*)"
        ]
    }
}
